<div class="user-images flex">
  <% if @images.present? %>
    <% @images.each do |image| %>
      <% if image.present? %>
        <div class="thumbnail-wrapper">
          <%= link_to image_tag(image, class: "user-picture"), url_for(image), target: "_blank" %>
          <% if @current_user == @user %>
            <%= link_to "&times;".html_safe, user_delete_image_path(user_id: @user, image_id: image), method: :delete, class: "delete-image-link" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
