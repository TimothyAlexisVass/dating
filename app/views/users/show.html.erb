<div class="user-profile">
  <% if @current_user == @user %>
    <h1><%= "#{ct(:welcome)} " %><%= @user.first_name %></h1>
  <% else %>
    <h1><%= "#{@user.first_name}, " %><span title='<%= t(:age) %>'><%= @user.age %></span></h1>
  <% end %>
  <%= image_tag "#{@user.gender}.svg" %><br>
  <% if @user.rebirth_date.present? %>
    <%= ct(:baptized_since) %>: <%= @user.rebirth_date %>
  <% else %>
    <%= ct(:not_yet_baptized) %>
  <% end %>
  <h2><%= ct(:presentation) %></h2>
  <p>
    <% if @user.bio.present? %>
      <%= @user.bio %>
    <% else %>
      <%= @user.first_name %> <%= t(:has_no_bio) %>
    <% end %>
  </p>
