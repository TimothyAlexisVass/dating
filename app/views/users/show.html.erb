    <span><%= ct(:account) %>: <%= @user.verified? ? "âœ…#{ct(:verified)}" : "â›”#{ct(:not_verified)}" %></span>
    <span><%= ct(:congregation) %>: <%= @user.verified_congregation? ? "âœ…#{ct(:verified)}" : "â›”#{ct(:not_verified)}" %></span>
    <span><%= ct(:baptism) %>: <%= @user.verified_rebirth? ? "âœ…#{ct(:verified)}" : "â›”#{ct(:not_verified)}" %></span>
