<h2 class="m-t-none"><%= ct(:presentation) %></h2>
<p>
  <% if @user.bio.present? %>
    <%= @user.bio %>
  <% else %>
    <%= t("#{:autogenerated_bio}.intro", first_name: @user.first_name) %><br>
    <%= t("#{:autogenerated_bio}.age", age: @user.age, marital_status: t(@user.marital_status), gender: t("singular.#{@user.gender}"), spouse: t("spouse.#{@user.searching_for}"), age_range_lower: @user.age_range_lower, age_range_upper: @user.age_range_upper) %>
  <% end %>
</p>