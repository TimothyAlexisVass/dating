<h2 class="m-t-none">
  <%= ct(:presentation) %>
  <% if @user == @current_user %>
    <%= button_tag ct(:save), onclick: "userAjaxUpdate('#user-bio', 'bio')" %>
  <% end %>
</h2>
<% if @user.bio.blank? %>
  <% @user.bio = t("#{:autogenerated_bio}.intro", first_name: @user.first_name) %>
  <% @user.bio += "\n" + t("#{:autogenerated_bio}.age", age: @user.age, marital_status: @user.marital_status_string.downcase, gender: t("singular.#{@user.gender}"), spouse: t("spouse.#{@user.searching_for}"), age_range_lower: @user.age_range_lower, age_range_upper: @user.age_range_upper) %>
<% end %>

<% if @user == @current_user %>
  <%= text_area_tag :bio, @user.bio, id: "user-bio" %>
<% else %>
  <p class="p-l-8">
    <% @user.bio.split(/\n/).each do |line| %>
      <%= line %><br>
    <% end %>
  </p>
<% end %>
