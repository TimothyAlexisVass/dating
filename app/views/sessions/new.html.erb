<div class="header">
  <h1>Welcome to the Dating App!</h1>
  <p>Find your perfect match today!</p>
</div>

<div class="sign-up-form">
  <h2>Sign Up</h2>
  <%= form_for @user do |f| %>
    <div class="signup-field">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="signup-field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="signup-field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Sign Up" %>
    </div>
<% end %>

</div>
